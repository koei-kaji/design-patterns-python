{
  "env": {
    "browser": true,
    "es6": true,
    "es2021": false,
    "jasmine": true
  },
  "extends": [
    "airbnb-base",
    "prettier",
    "plugin:jasmine/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": [
    "jasmine"
  ],
  "overrides": [
    {
      "files": "*.mjs",
      "extends": "airbnb-base",
      "rules": {
        "import/extensions": [
          "error",
          "ignorePackages",
          {
            "mjs": "always"
          }
        ]
      }
    }
  ]
}